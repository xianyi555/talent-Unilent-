
<% if (message.length > 0) { %>
  <div class="alert alert-danger"><%= message %></div>
<% } %>

<body class="signupBody">

    <form class="signupFloat" method="post" action="/signup">
      <h2>Signup</h2>

      <div class="form-group">
        <label for="email">Email</label>
        <input class="signupInput form-control" type="text" name="email" id="email">
      </div>

      <div class="form-group">
        <label for="email">Password</label>
        <input class="signupInput form-control" type="password" name="password" id="password">
      </div>

      <input class="btn btn-default" type="submit">
    </form>
</body>